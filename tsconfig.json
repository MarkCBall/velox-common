{
    "compilerOptions": {
        "declaration": true,
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": [
            "node",
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
}
